    #wave {
        position: relative;
        height: 70px;
        width: 100%;
        background: #45aaf2;
        transition: 0.5s;
    }
    #wave:before {
        content: "";
        display: block;
        position: absolute;
        border-radius: 100% 50%;
        width: 52%;
        height: 80px;
        background-color: #fff;
        right: 0px;
        top: 40px;
    }
    #wave:after {
        content: "";
        display: block;
        position: absolute;
        border-radius: 100% 50%;
        width: 56%;
        height: 70px;
        background-color: #45aaf2;
        left: 0;
        top: 24px;
        transition: 0.5s;
    }
    .col-auto {
     padding-right: 0px !important;
    }
    .colorinput-color {
        display: inline-block;

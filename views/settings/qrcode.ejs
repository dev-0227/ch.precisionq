        border: 1px solid #eaedf1;
        color: #fff;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }
    .colorinput-input {
        position: absolute;
        z-index: -1;
        opacity: 0;
    }
    .bg-azure, .azure::after{
        background-color: #45aaf2;
    }
    .bg-indigo, .indigo::after{
        background-color: #6574cd!important;
    }
    .bg-purple, .purple::after{
        background-color: #8927ec!important;
    }
    .bg-pink, .pink::after{
        background-color: #fc5296!important;
    }
    .bg-red, .red::after{
        background-color: #e73827!important;
    }
    .bg-orange, .orange::after{
        background-color: #fc7303!important;
    }
    .bg-yellow, .yellow::after{
        background-color: #FBB034!important;

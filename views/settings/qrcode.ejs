    .bg-teal, .teal::after{
        background-color: #1caf9f!important;
    }
    .postheader{
        background-color: #45aaf2;
        transition: 0.5s;
    }
    #post-main{
        border:5px solid #45aaf2;
        width:100%;
        margin:0 auto;

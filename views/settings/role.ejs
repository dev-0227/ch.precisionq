<div class="card">
    <div class="card-header border-0 pt-6">
      <div class="card-title">
        <h3 class="card-title">Roles</h3>
      </div>
      <div class="card-toolbar">
        <a class="btn btn-primary permissionaddbtn" id="add_btn" ><i class="fa fa-plus">&nbsp;</i>Add Role</a>
      </div>
    </div>
    <div class="card-body py-4">
      <input type="hidden" id="chosen_role" />
  
      <table class="table table-striped table-bordered text-nowrap w-100"  id="role_table" >
        <thead>
          <tr >
            <th class="col-md-2">Code</th>
            <th class="col-md-2">Name</th>
            <th class="col-md-3">Description</th>
            <th class="col-md-3">Created Date</th>
            <th class="text-center col-md-2">Actions</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
<!-- ROW CLOSED -->
<div class="modal fade" id="role-edit-modal" tabindex="-1" role="dialog"  aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="example-Modal3">Role Edit</h5>
				<div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
            <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
        </div>
			</div>
			<div class="modal-body">
        <div class="row">
          <div class="col-md-2">
            <div class="form-group">
                <label for="ucode" class="required fw-semibold fs-6 mb-2">Code:</label>
                <input type="number" class="form-control form-control-solid mb-3 mb-lg-0" id="ucode">
            </div>
          </div>
          <div class="col-md-4">
              <div class="form-group">
                  <label for="uname" class="required fw-semibold fs-6 mb-2">Role Name:</label>
                  <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="uname">
              </div>
          </div>
          <div class="col-md-6">
              <div class="form-group">
                  <label for="udescription" class="fw-semibold fs-6 mb-2">Description:</label>
                  <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="udescription">
              </div>
          </div>
          <div class="col-md-12">
              <div class="form-group">
                  <div class="col-md-12 my-3">
                      <label for="udescription" class="required fw-semibold fs-6 mb-2">Role Permissions:</label>
                  </div>
                  <div id="permission-list">
                      <div class="panel-group" id="accordion">
                
                      </div>
                  </div>
              </div>
          </div>
        </div>
			</div>
			<div class="modal-footer">
        <button type="button" class="btn btn-info" data-bs-dismiss="modal"><i class="fa fa-close">&nbsp;</i> Close</button>
        <button type="button" class="btn btn-primary" id="update_btn"><i class="fa fa-save">&nbsp;</i> Save</button>
      </div>
		</div>
	</div>
</div>
<div class="modal fade" id="role-add-modal" tabindex="-1" role="dialog"  aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="example-Modal3">Add New Role</h5>
				<div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
			</div>
			<div class="modal-body">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                  <label for="acode" class="required fw-semibold fs-6 mb-2">Code:</label>
                  <input type="number" class="form-control form-control-solid mb-3 mb-lg-0" id="acode">
              </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="aname" class="required fw-semibold fs-6 mb-2">Role Name:</label>
                    <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="aname">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="adescription" class="fw-semibold fs-6 mb-2">Description:</label>
                    <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="adescription">
                </div>
            </div>
          </div>
			</div>
			<div class="modal-footer">
                <button type="button" class="btn btn-info" data-bs-dismiss="modal"><i class="fa fa-close">&nbsp;</i> Close</button>
                <button type="button" class="btn btn-primary" id="create_btn"><i class="fa fa-save">&nbsp;</i> Save</button>
             </div>
		</div>
	</div>
</div>

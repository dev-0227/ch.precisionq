<div class="card">
  <div class="card-header border-0 pt-6">
    <div class="card-title">
      <h3 class="card-title">Vitals</h3>
    </div>
    <div class="card-toolbar">
      <a class="btn btn-primary permissionaddbtn" id="add_btn" ><i class="fa fa-plus">&nbsp;</i>Add Vital</a>
    </div>
  </div>
  <div class="card-body py-4">
    <input type="hidden" id="chosen_vital" />

    <table class="table table-striped table-bordered text-nowrap w-100"  id="vital_table" >
      <thead>
        <tr >
          <th class="col-md-3">Name</th>
          <th class="col-md-4">Description</th>
          <th class="col-md-2">LOINC</th>
          <th class="col-md-1">UCUM Unit</th>
          <th class="text-center col-md-2">Actions</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>
<!-- ROW CLOSED -->

<div class="modal fade" id="vital-add-modal" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered mw-650px" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="example-Modal3">Add Vital Role</h5>
        <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
            <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
        </div>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="aname" class="required fw-semibold fs-6 my-2">Profile Name:</label>
                    <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="aname">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="adescription" class="required fw-semibold fs-6 my-2">Description:</label>
                    <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="adescription">
                </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                  <label for="aname" class="required fw-semibold fs-6 my-2">LOINC Code:</label>
                  <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="acode">
              </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="aunit" class="fw-semibold fs-6 my-2">UCUM Unit:</label>
                    <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" id="aunit">
                </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                  <label for="acomment" class="required fw-semibold fs-6 my-2">LOINC Name and Comments:</label>
                  <textarea class="form-control form-control-solid" rows="5" id="acomment" placeholder=""></textarea>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                  <label for="asnomed" class="fw-semibold fs-6 my-2">SNOMED:</label>
                  <textarea class="form-control form-control-solid" rows="2" id="asnomed" placeholder="SNOMED CT Concept"></textarea>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                  <label for="aecl" class="fw-semibold fs-6 my-2">ECL:</label>
                  <textarea class="form-control form-control-solid" rows="2" id="aecl" placeholder="ECL"></textarea>
              </div>
            </div>
            
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-bs-dismiss="modal"><i class="fa fa-close">&nbsp;</i> Close</button>
        <button type="button" class="btn btn-primary" id="create_btn"><i class="fa fa-save">&nbsp;</i> Save</button>
      </div>
    </div>
  </div>
</div>



<div class="card">
  <div class="card-header border-0 pt-6">
    <div class="card-title">
      <h3 class="card-title">Diagnostic Report</h3>
    </div>
    <div class="card-toolbar">
      <a class="btn btn-primary permissionaddbtn" id="add_btn" ><i class="fa fa-plus">&nbsp;</i>Add</a>
    </div>
  </div>
  <div class="card-body py-4">
    <input type="hidden" id="chosen_vital" />

    <table class="table table-striped table-bordered text-nowrap w-100"  id="diagnostic_procedure_table" >
      <thead>
        <tr >
          <th width="15%">Measure ID</th>
          <th width="30%">Name</th>
          <th width="40%">Observation</th>
          <th width="15%"></th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>
<!-- ROW CLOSED -->

<div class="modal fade" id="diagnostic_procedure_modal" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered mw-650px" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="example-Modal3">Diagnostic Report</h5>
        <input type="hidden" class="form-control"  id="d_procedure_id" data-field="id">
        <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
            <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
        </div>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
                <label for="d_procedure_mid" class="required fw-semibold fs-6 my-2">Measure ID:</label>
                <input type="text" class="form-control form-control-solid mb-3 mb-lg-0 " data-field="mid" id="d_procedure_mid">
            </div>
          </div>
          <div class="col-md-9">
            <div class="form-group row d-none" id="d_procedure_measure">
                <div class="col-md-12 "><label class="fw-semibold fs-6 my-2">Measure:</label></div>
                <div class="col-md-12 " id="d_procedure_measure_name"  ></div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label for="d_procedure_name" class="required fw-semibold fs-6 my-2">Name:</label>
                <input type="text" class="form-control form-control-solid mb-3 mb-lg-0" data-field="name" id="d_procedure_name">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label for="d_procedure_obsid" class="fw-semibold fs-6 my-2">Observation:</label>
                <select  class="form-control select2 custom-select" data-field="obsid" id="d_procedure_obsid"></select>
            </div>
          </div>
          <div class="col-md-12">
              <div class="form-group">
                  <label for="d_procedure_description" class="fw-semibold fs-6 my-2">Description:</label>
                  <input type="text" class="form-control form-control-solid mb-3 mb-lg-0 " data-field="description" id="d_procedure_description">
              </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label for="d_procedure_type" class="fw-semibold fs-6 my-2">Type:</label>
                <input type="text" class="form-control form-control-solid mb-3 mb-lg-0 " data-field="type" id="d_procedure_type">
            </div>
          </div>
          <div class="col-md-6 d-none">
            <div class="form-group">
                <label for="d_procedure_unit" class="fw-semibold fs-6 my-2">Unit:</label>
                <input type="text" class="form-control form-control-solid mb-3 mb-lg-0 " data-field="unit" id="d_procedure_unit">
            </div>
          </div>
          <div class="col-md-6">
              <div class="form-group">
                  <label for="d_procedure_status" class="fw-semibold fs-6 my-2">Status:</label>
                  <select  class="form-control select2 custom-select" id="d_procedure_status" data-field="status"></select>
              </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label for="d_procedure_category" class="fw-semibold fs-6 my-2">Category:</label>
                <select  class="form-control select2 custom-select" id="d_procedure_category" data-field="category"></select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label for="d_procedure_snomed" class="fw-semibold fs-6 my-2">SNOMED:</label>
                <select  class="form-control select2 custom-select" id="d_procedure_snomed" data-field="snomed"></select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label for="d_procedure_locin" class="fw-semibold fs-6 my-2">LOCIN:</label>
                <input type="text" class="form-control form-control-solid mb-3 mb-lg-0 " data-field="locin" id="d_procedure_locin">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label for="d_procedure_specimen" class="fw-semibold fs-6 my-2">Specimen:</label>
                <select  class="form-control select2 custom-select" id="d_procedure_specimen" data-field="specimen"></select>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-bs-dismiss="modal"><i class="fa fa-close">&nbsp;</i> Close</button>
        <button type="button" class="btn btn-primary" id="create_btn"><i class="fa fa-save">&nbsp;</i> Save</button>
      </div>
    </div>
  </div>
</div>





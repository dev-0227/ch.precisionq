<div class="card">
    <div class="card-header border-0 pt-6">
      <div class="card-title">
        <h3 class="card-title">Permissions</h3>
      </div>
      <div class="card-toolbar">
        <a class="btn btn-primary permissionaddbtn" id="add_btn" ><i class="fa fa-plus">&nbsp;</i>Add Permission</a>
      </div>
    </div>
    <div class="card-body py-4">
      <input type="hidden" id="chosen_user" />
  
      <table class="table table-striped table-bordered text-nowrap w-100" >
        <thead>
          <tr>
            <th class=" col-md-4">Name</th>
            <th class=" col-md-6">Assigned To</th>
            <th class=" col-md-2">Actions</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      <div class="panel-group" id="accordion"></div>
    </div>
  </div>
<!-- ROW CLOSED -->
<div class="modal fade" id="permission-edit-modal" tabindex="-1" role="dialog"  aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
                <h5 class="modal-title" >Permission Edit</h5>
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
			</div>
			<div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="uname" class="form-control-label">Permission Name:</label>
                            <input type="text" class="form-control" id="uname">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="udescription" class="form-control-label">Description:</label>
                            <input type="text" class="form-control" id="udescription">
                        </div>
                    </div>
                </div>
			</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-bs-dismiss="modal"><i class="fa fa-close">&nbsp;</i> Close</button>
                <button type="button" class="btn btn-primary" id="update_btn"><i class="fa fa-save">&nbsp;</i> Save</button>
             </div>
		</div>
	</div>
</div>
<div class="modal fade" id="permission-add-modal" tabindex="-1" role="dialog"  aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add New Permission</h5>
				<div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
			</div>
			<div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="aname" class="form-control-label">Permission Name:</label>
                            <input type="text" class="form-control" id="aname">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="adescription" class="form-control-label">Description:</label>
                            <input type="text" class="form-control" id="adescription">
                        </div>
                    </div>
                    
                </div>
			</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-bs-dismiss="modal"><i class="fa fa-close">&nbsp;</i> Close</button>
                <button type="button" class="btn btn-primary" id="create_btn"><i class="fa fa-save">&nbsp;</i> Save</button>
             </div>
		</div>
	</div>
</div>

<style>
    .bootstrap-tagsinput{
        width: 100%;
        min-height: 42px;
    }
    
</style>
<div class="row">
    <div class="col-12 col-sm-12">
        <div class="card ">
            <div class="card-header">
                <h3 class="card-title mb-0">Hedis Quality Query Builder</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="measurename" class="form-control-label">Measure Name LIKE "%...%"</label>
                                    <input type="text" class="form-control" id="measurename" data-role="tagsinput">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Patient ID IN (...)</label>
                                    <select multiple="multiple" class="filter-multi" id = "ptlist">
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Where Condition</label>
                                    <textarea rows="8" class="form-control" id="queryresult" name="queryresult"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary downloadquery">Download</button>
                                <button class="btn btn-info copyquery">Copy Clipboard</button>
                                <button class="btn btn-danger clearquery">Clear</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div><label>Query Separator Symbol</label></div>
                                <button class="btn btn-primary andbtn">AND</button>
                                <button class="btn btn-primary orbtn">OR</button>
                                <button class="btn btn-primary likebtn">LIKE</button>
                                <button class="btn btn-primary inbtn">IN</button>
                                <button class="btn btn-primary bracketbtn">(...)</button>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div><!-- COL END -->
</div>